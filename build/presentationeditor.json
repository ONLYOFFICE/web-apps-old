                                "underscore",
                                "coapisettings",
                                "allfonts",
                                "xregexp",
                                "sockjs",
                                "jszip",
                                "jszip-utils",
                                "jsrsasign"
                            ]
                        },
                        "gateway": {
                            "deps": [
